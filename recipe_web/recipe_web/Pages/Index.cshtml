@page
@model recipe_web.Pages.IndexModel
@{
    ViewData["Title"] = "Homepage";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="message_container">
    <p>
        Welcome to our vibrant community of student chefs! <br>
        Get ready to explore, share, and savor delicious recipes crafted by fellow students just like you. <br>
        Let's begin your culinary journey together!
    </p>
</div>

@if (Model.RecommendedRecipes != null && Model.RecommendedRecipes.Count > 0)
{
    <h3>Recommended Recipes</h3>
    <div class="recipe-list">
        @foreach (var recipe in Model.RecommendedRecipes)
        {
            <div class="recipe-item">
                <p id="title">@recipe.GetTitle()</p>
                @if (recipe.GetRecipePic() != null)
                {
                    <div class="recipe-pic-container">
                        <img src="data:@recipe.GetRecipePic().GetContentType();base64,@Convert.ToBase64String(Convert.FromBase64String(@recipe.GetRecipePic().GetData()))" alt="@recipe.GetTitle() Picture" class="recipe-pic" />
                    </div>
                }
                <p>@recipe.GetDescription()</p>
                <a href="/RecipeDetails/@recipe.GetIdRecipe()" class="button">View Recipe</a>
            </div>
        }
    </div>
}
else
{
    <h3>Under Maintenance</h3>
}

@section Styles {
    <style>
        .message_container p {
            font-size: 18px;
            color: White;
            text-align: center;
        }

        .recipe-list {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            justify-content: center;
            padding: 20px;
        }

        .recipe-item {
            background-color: #F1F1F1;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            padding: 20px;
            width: 300px;
            text-align: center;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

            .recipe-item h3 {
                margin-bottom: 10px;
                color: #333;
            }

        #title {
            font-size: 25px;
            color: #2C3B70;
            font-weight: bold;
            padding: 2px 0;
        }

        .recipe-pic-container {
            width: 100%;
            padding-top: 100%;
            position: relative;
            overflow: hidden;
            border-radius: 10px;
            margin-bottom: 10px;
        }

        .recipe-pic {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .recipe-item p {
            color: #666;
            margin-bottom: 20px;
            padding: 0 10px;
            flex-grow: 1;
        }

        .button {
            display: inline-block;
            background-color: #3D538F;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            text-decoration: none;
            font-size: 16px;
            text-align: center;
            margin-top: 10px;
        }

            .button:hover {
                background-color: #2C3B70;
            }

        .pagination {
            display: flex;
            justify-content: center;
            margin-top: 20px;
        }

        .pagination-button {
            padding: 10px 15px;
            margin: 0 5px;
            border: 1px solid #ccc;
            border-radius: 5px;
            background-color: #fff;
            color: #333;
            text-decoration: none;
        }

            .pagination-button.active {
                background-color: #3D538F;
                color: white;
            }

            .pagination-button:hover {
                background-color: #2C3B70;
                color: white;
            }
    </style>
}
